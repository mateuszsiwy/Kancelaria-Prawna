@model BazyDanych1Projekt.Models.Platnosc

@{
    ViewData["Title"] = Model.IdPlatnosci == 0 ? "Dodaj Płatność" : "Edytuj Płatność";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddOrEdit">
    <div class="form-group">
        <label asp-for="IdFaktury" class="control-label"></label>
        <input asp-for="IdFaktury" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataPlatnosci" class="control-label"></label>
        <input asp-for="DataPlatnosci" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Kwota" class="control-label"></label>
        <input asp-for="Kwota" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>